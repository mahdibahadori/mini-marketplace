<%= render 'layouts/index'%> 

<div class="jumbotron jumbotron-fluid ">
        <div class="container">
            <h1 class="display-4 text-center text-info">Know more about this item here</h1>           
        </div>
</div>




<div class="d-flex flex-column-reverse flex-md-row bg-highlight mb-3">
  <div class="d-flex flex-column d-block text-center col-12 col-sm-12 col-md-6 p-4  border border-info">
    <div class="my-1 font-weight-bold bg-info text-white"><h1><%= @item.name%></h1></div>   
    <div><h3 class="font-weight-normal my-5"><%= @item.description%></h3></div> 
    <div><p class="font-weight-normal text-info">For more information about this item, you may send your request to: <%= @item.user.email%></p></div> 
    <button class="btn-sm w-25 mt-5 mx-auto" id="stripe">Buy this item</button>
    
  </div>
  <div class="text-center d-block col-12 col-sm-12 col-md-6 h-50"> 
    <%=image_tag @item.picture, class:"img-fluid w-100"%>   
  </div>  
</div>

 <%= javascript_pack_tag "stripe" %>






