
<%# ---------------------------------------------------------------------------------------------------------- %>
<%= render "layouts/new"%>
<div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center text-info px-3 px-md-1">Create new items here</h1>           
        </div>
</div>

<div class='container mw-100 mt-5 d-flex flex-column flex-md-row'>

  <div class="form col-12 col-md-6">
    <h2>New Item</h2>
   <%= form_with model: @item, local: true, class: "new_items" do |f| %>   

    <div class="form-group mw-75">
      <%= f.label :name %>    
      <%= f.text_field :name, class: "form-control"%>
    </div>
    <div class="form-group mw-75">
      <%= f.label :description %>    
      <%= f.text_area :description, class: "form-control"%>
    </div>
    <div class="form-group mw-75">
      <%= f.label :location %>    
      <%= f.text_field :location, class: "form-control"%>
    </div>
    <div class="form-group mw-75">
      <%= f.label :price %>    
      <%= f.text_field :price, class: "form-control"%>
    </div>
    <div class="form-group mw-75">
      <%= f.label :picture %>    
      <%= f.file_field :picture, class: "form-control"%>
    </div>  
    <%= f.submit 'Create', class: 'btn btn-outline-info rounded-pill mb-1' %><br>
   
  <%end%>
  </div> 
</div> 

